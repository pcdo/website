/**
 * Implementation of hook_enable().
 */
function paranoia_enable() {
  // Disable the php module if it is enabled.
  if (module_exists('php')) {
    module_disable(array('php'));
    drupal_set_message(t('Paranoia module disabled the PHP module.'));
  }
}